{
    "name": "Magentic Algo Trading Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "." 
    },
    "containerEnv": {
        "GOOGLE_APPLICATION_CREDENTIALS": "/workspaces/${localWorkspaceFolderBasename}/GCP_Experiments/gcp_key.json",
        "GOOGLE_CLOUD_PROJECT": "datascience-projects"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.go",
                "eamodio.gitlens",
                "ms-toolsai.jupyter"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/workspaces/${localWorkspaceFolderBasename}/.venv/bin/python"
            }
        }
    },
    "postCreateCommand": "bash -c 'python3 -m venv .venv && source .venv/bin/activate && pip install --no-cache-dir -r requirements.txt && python3 -m ipykernel install --user --name=magentic_algo_venv --display-name \"Magentic Algo VEnv\"'",
    "remoteUser": "vscode"
}