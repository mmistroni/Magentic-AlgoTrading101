{
    "name": "Magentic Algo Trading Environment",
    "containerEnv": {
        "GOOGLE_APPLICATION_CREDENTIALS": "/workspaces/GCP_Experiments/gcp_key.json",
        "GOOGLE_CLOUD_PROJECT": "datascience-projects"
    },
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.go",
                "eamodio.gitlens",
                "ms-toolsai.jupyter"
            ],
            "settings": {
                "python.defaultInterpreterPath": "./.venv/bin/python",
                "python.terminal.activateEnvInCurrentTerminal": true,
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash"
                    }
                }
            }
        }
    },
    "postCreateCommand": "bash -c \"python3 -m venv .venv && source ./.venv/bin/activate && pip install --no-cache-dir -r requirements.txt && python3 -m ipykernel install --user --name=magentic_algo_venv --display-name 'Magentic Algo VEnv'",
    "remoteUser": "vscode"
}